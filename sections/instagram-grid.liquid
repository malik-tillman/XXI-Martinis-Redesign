<style>
  .instagram-grid .message {
    background-image:
      url("{{ 'frame-insta-top-left.svg' | asset_url }}"),
      url("{{ 'frame-insta-top-right.svg' | asset_url }}"),
      url("{{ 'frame-insta-bottom-right.svg' | asset_url }}"),
      url("{{ 'frame-insta-bottom-left.svg' | asset_url }}"),
      url("{{ 'frame-insta-top.svg' | asset_url }}"),
      url("{{ 'frame-insta-right.svg' | asset_url }}"),
      url("{{ 'frame-insta-bottom.svg' | asset_url }}"),
      url("{{ 'frame-insta-left.svg' | asset_url }}");
    background-repeat:
      no-repeat, no-repeat, no-repeat, no-repeat,
      repeat-x, repeat-y, repeat-x, repeat-y;
    background-position:
      top left, top right, bottom right, bottom left,
      top, right, bottom, left;
    background-size: 24px 24px;
  }
</style>
<section class="instagram-grid sm:container px-6 mt-24 md:mt-36 xl:mt-44">
