    <div class="w-1/2 order-1 lg:w-1/4 p-3 md:p-4 xl:p-6">
      <a href="{{ section.settings.instagram_link }}" class="post block aspect-w-1 aspect-h-1">
        <img srcset="{%- if section.settings.image_1.width >= 165 -%}{{ section.settings.image_1 | img_url: '165x' }} 165w,{%- endif -%}
          {%- if section.settings.image_1.width >= 360 -%}{{ section.settings.image_1 | img_url: '360x' }} 360w,{%- endif -%}
          {%- if section.settings.image_1.width >= 535 -%}{{ section.settings.image_1 | img_url: '535x' }} 535w,{%- endif -%}
          {%- if section.settings.image_1.width >= 720 -%}{{ section.settings.image_1 | img_url: '720x' }} 720w,{%- endif -%}
          {%- if section.settings.image_1.width >= 940 -%}{{ section.settings.image_1 | img_url: '940x' }} 940w,{%- endif -%}
          {%- if section.settings.image_1.width >= 1070 -%}{{ section.settings.image_1 | img_url: '1070x' }} 1070w{%- endif -%}"
          src="{{ section.settings.image_1 | img_url: '533x' }}"
          sizes="(min-width: 1100px) 535px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
          alt="{{ section.settings.image_1.alt | escape }}"
          loading="lazy"
          width="{{ section.settings.image_1.width }}"
          height="{{ section.settings.image_1.height }}"
          class="object-cover w-full h-full"
        >
        <div class="follow flex flex-col items-center justify-center">
          Follow Us
          <div class="mt-4 w-9">
            {% render 'icon-arrow' %}
          </div>
        </div>
      </a>
    </div>
    <div class="w-full order-3 lg:order-2 lg:w-1/2 p-3 md:p-4 xl:p-6">
      <div class="message flex flex-col place-content-center h-full text-center px-14 py-16 sm:px-24 md:px-40 lg:px-12 xl:px-20 lg:py-0">
