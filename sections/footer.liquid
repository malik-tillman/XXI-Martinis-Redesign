<footer class="footer bg-gray mt-24 md:mt-32 py-12 lg:pt-24 lg:pb-14">
  <div class="sm:container px-6 text-white">
    <div class="flex flex-wrap">
      <div class="w-full lg:w-1/2 lg:pr-12 xl:pr-16">
        <div class="lg:hidden">
          <a href="/" class="block w-20 mx-auto">
            {% render 'icon-lockup' %}
          </a>
        </div>
        <div class="newsletter mt-16 lg:mt-0 text-center lg:text-left max-w-sm mx-auto lg:max-w-max lg:mx-0">
          {%- if section.settings.signup_heading != blank -%}
            <p>{{ section.settings.signup_heading | escape }}</p>
          {%- endif -%}
          <form action="https://xximartinis.us5.list-manage.com/subscribe/post?u=05fcdadd8f51b9e9daad7e500&amp;id=859dda79b4" method="post" target="_blank">
            <input type="email" name="EMAIL" placeholder="Email Address" required>
            <div style="position: absolute; left: -5000px;" aria-hidden="true">
              <input type="text" name="b_05fcdadd8f51b9e9daad7e500_859dda79b4" tabindex="-1" value="">
            </div>
            <button type="submit" name="subscribe">Submit</button>
          </form>
        </div>
      </div>
      <div class="w-full lg:w-1/2 flex flex-wrap justify-center lg:justify-start text-center lg:text-left lg:pl-12 xl:pl-16">
        {%- if section.settings.contact_linklist != blank -%}
          <div class="touch-base w-full lg:w-1/3 mt-16 lg:mt-0 lg:mr-24 order-2 lg:order-1">
            <h6>{{ section.settings.contact_heading | escape }}</h6>
            <ul>
              {%- for link in linklists[section.settings.contact_linklist].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
        {%- if section.settings.follow_linklist != blank -%}
          <div class="follow w-full lg:w-auto mt-16 lg:mt-0 order-1 lg:order-2">
            <h6>{{ section.settings.follow_heading | escape }}</h6>
            <ul>
              {%- for link in linklists[section.settings.follow_linklist].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="flex flex-wrap mt-4">
      <div class="w-1/2 hidden lg:block">
        <a href="/" class="block w-20 xl:w-28">
          {% render 'icon-lockup' %}
        </a>
      </div>
      <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
        <div class="copyright mt-16 lg:mt-auto text-center lg:text-right">
          <a href="/">{{ shop.name }} {{ 'now' | date: '%Y' }}</a>
          {%- if section.settings.footer_linklist != blank -%}
            <ul>
              {%- for link in linklists[section.settings.footer_linklist].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
          <p class="mt-8 lg:mt-0">
            Site Design By 
            <a href="https://www.obviouslee.com/" target="_blank" rel="noopener">
              Obviouslee Marketing
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Email Signup"
      },
      {
        "type": "textarea",
        "id": "signup_heading",
        "label": "Heading"  
      },
      {
        "type": "header",
        "content": "Contact Menu"
      },
      {
        "type": "text",
        "id": "contact_heading",
        "default": "Get in touch",
        "label": "Heading"
      },
      {
        "type": "link_list",
        "id": "contact_linklist",
        "label": "Menu"
      },
      {
        "type": "header",
        "content": "Follow Menu"
      },
      {
        "type": "text",
        "id": "follow_heading",
        "default": "Follow",
        "label": "Heading"
      },
      {
        "type": "link_list",
        "id": "follow_linklist",
        "label": "Menu"
      },
      {
        "type": "header",
        "content": "Footer Menu"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Menu",
        "default": "footer"
      }
    ]
  }
{% endschema %}