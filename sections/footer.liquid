<style>
  footer {
    background-image: url("{{ 'ornament-light.svg' | asset_url }}");
    background-color: black;
    background-repeat: repeat-y;
    background-size: auto 201%;
    background-position: top right 15px;
  }
</style>

<footer class="footer bg-black py-12 lg:pt-24 lg:pb-14">
  <div class="sm:container px-6 text-white">
    <div class="flex flex-wrap footer--top">
      <div class="footer--menu-container w-full lg:w-1/2 flex flex-wrap justify-start text-left">
        {%- if section.settings.contact_linklist != blank -%}
          <div class="touch-base w-full lg:w-1/3 mt-16 lg:mt-0 lg:mr-24 order-2 lg:order-1">
            <h6>{{ section.settings.contact_heading | escape }}</h6>
            <ul>
              {%- for link in linklists[section.settings.contact_linklist].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="follow w-full lg:w-auto mt-16 lg:mt-0 order-1 lg:order-2">
          <h6>Follow Us</h6>
          <ul>
            {% if section.settings.facebook %}
              <li>
                <a href="{{ section.settings.facebook }}" target="_blank" rel="noopener">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22 12.3038C22 6.74719 17.5229 2.24268 12 2.24268C6.47715 2.24268 2 6.74719 2 12.3038C2 17.3255 5.65684 21.4879 10.4375 22.2427V15.2121H7.89844V12.3038H10.4375V10.0872C10.4375 7.56564 11.9305 6.1728 14.2146 6.1728C15.3088 6.1728 16.4531 6.36931 16.4531 6.36931V8.84529H15.1922C13.95 8.84529 13.5625 9.6209 13.5625 10.4166V12.3038H16.3359L15.8926 15.2121H13.5625V22.2427C18.3432 21.4879 22 17.3257 22 12.3038Z" fill="white"/>
                  </svg>

                  <span class="label">Facebook</span>
                </a>
              </li>
            {% endif %}

            {% if section.settings.instagram %}
              <li>
                <a href="{{ section.settings.instagram }}" target="_blank" rel="noopener">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M16 3.24268H8C5.23858 3.24268 3 5.48126 3 8.24268V16.2427C3 19.0041 5.23858 21.2427 8 21.2427H16C18.7614 21.2427 21 19.0041 21 16.2427V8.24268C21 5.48126 18.7614 3.24268 16 3.24268ZM19.25 16.2427C19.2445 18.0353 17.7926 19.4872 16 19.4927H8C6.20735 19.4872 4.75549 18.0353 4.75 16.2427V8.24268C4.75549 6.45003 6.20735 4.99817 8 4.99268H16C17.7926 4.99817 19.2445 6.45003 19.25 8.24268V16.2427ZM16.75 8.49268C17.3023 8.49268 17.75 8.04496 17.75 7.49268C17.75 6.9404 17.3023 6.49268 16.75 6.49268C16.1977 6.49268 15.75 6.9404 15.75 7.49268C15.75 8.04496 16.1977 8.49268 16.75 8.49268ZM12 7.74268C9.51472 7.74268 7.5 9.7574 7.5 12.2427C7.5 14.728 9.51472 16.7427 12 16.7427C14.4853 16.7427 16.5 14.728 16.5 12.2427C16.5027 11.0484 16.0294 9.90225 15.1849 9.05776C14.3404 8.21327 13.1943 7.74002 12 7.74268ZM9.25 12.2427C9.25 13.7615 10.4812 14.9927 12 14.9927C13.5188 14.9927 14.75 13.7615 14.75 12.2427C14.75 10.7239 13.5188 9.49268 12 9.49268C10.4812 9.49268 9.25 10.7239 9.25 12.2427Z" fill="white"/>
                  </svg>

                  <span class="label">Instagram</span>
                </a>
              </li>
            {% endif %}

            {% if section.settings.twitter %}
              <li>
                <a href="{{ section.settings.twitter }}" target="_blank" rel="noopener">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M17.1761 4.24268H19.9362L13.9061 11.0201L21 20.2427H15.4456L11.0951 14.6493L6.11723 20.2427H3.35544L9.80517 12.9935L3 4.24268H8.69545L12.6279 9.3553L17.1761 4.24268ZM16.2073 18.6181H17.7368L7.86441 5.78196H6.2232L16.2073 18.6181Z" fill="white"/>
                  </svg>

                  <span class="label">X</span>
                </a>
              </li>
            {% endif %}

            {% if section.settings.spotify %}
              <li>
                <a href="{{ section.settings.spotify }}" target="_blank" rel="noopener">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9.99992 0.000117188C4.47719 0.000117188 0 4.47719 0 9.99988C0 15.5227 4.47719 19.9996 9.99992 19.9996C15.5232 19.9996 20 15.5229 20 9.99988C20 4.4775 15.5232 0.000585937 9.99977 0.000585937L9.99992 0V0.000117188ZM14.5859 14.4228C14.4068 14.7165 14.0223 14.8098 13.7285 14.6293C11.3807 13.1952 8.42492 12.8705 4.94402 13.6657C4.60859 13.7421 4.27426 13.532 4.19777 13.1964C4.12094 12.8608 4.33035 12.5265 4.66664 12.4502C8.47594 11.5798 11.7434 11.9545 14.3793 13.5654C14.6732 13.7457 14.7663 14.1289 14.5859 14.4228L14.5859 14.4228ZM15.8099 11.7C15.5841 12.0668 15.1041 12.1825 14.7375 11.957C12.0495 10.3047 7.95227 9.82617 4.77285 10.7914C4.36051 10.9159 3.92504 10.6836 3.79996 10.272C3.67574 9.85965 3.90824 9.42512 4.31984 9.29969C7.95152 8.19781 12.4664 8.73148 15.5532 10.6284C15.9198 10.8541 16.0356 11.3341 15.81 11.7003V11.7002L15.8099 11.7ZM15.915 8.86469C12.692 6.95039 7.37461 6.77445 4.2975 7.70832C3.8034 7.8582 3.28082 7.57934 3.13109 7.08508C2.98141 6.5907 3.26012 6.06855 3.75453 5.9184C7.28687 4.84605 13.1589 5.0532 16.8696 7.25609C17.315 7.51992 17.4608 8.09383 17.1968 8.53769C16.934 8.98215 16.3584 9.12871 15.9155 8.86469H15.915Z" fill="white"/>
                  </svg>

                  <span class="label">Spotify</span>
                </a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>

      <a href="/" class="block w-20 xl:w-28 footer--image-container">
        {% render 'icon-lockup' %}
      </a>

      <div class="w-full lg:w-1/2 footer--newsletter-container">
        <div class="hidden">
          <a href="/" class="block w-20 mx-auto">
            {% render 'icon-lockup' %}
          </a>
        </div>
        <div class="newsletter mt-16 lg:mt-0 text-center lg:text-left max-w-sm mx-auto lg:max-w-max lg:mx-0">
          {%- if section.settings.signup_heading != blank -%}
            <p>{{ section.settings.signup_heading | escape }}</p>
          {%- endif -%}

          {%- if section.settings.signup_subheading != blank -%}
              <p class="subheading">{{ section.settings.signup_subheading | escape }}</p>
          {%- endif -%}

          <form action="https://xximartinis.us5.list-manage.com/subscribe/post?u=05fcdadd8f51b9e9daad7e500&amp;id=859dda79b4" method="post" target="_blank">
            <input type="email" name="EMAIL" placeholder="Enter your email" required>
            <div style="position: absolute; left: -5000px;" aria-hidden="true">
              <input type="text" name="b_05fcdadd8f51b9e9daad7e500_859dda79b4" tabindex="-1" value="">
            </div>
            <button type="submit" name="subscribe">Subscribe</button>
          </form>

          {% if section.settings.signup_policy != blank %}
            <p class="policy">{{ section.settings.signup_policy }}</p>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="flex flex-wrap mt-4 footer--bottom justify-center">
      <div class="w-full flex justify-center">
        <div class="copyright mt-16 lg:mt-auto text-center lg:text-right justify-center">
          <a href="/">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved</a>
          {%- if section.settings.footer_linklist != blank -%}
            <ul>
              {%- for link in linklists[section.settings.footer_linklist].links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "header",
        "content": "Email Signup"
      },
      {
        "type": "textarea",
        "id": "signup_heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "signup_subheading",
        "label": "SubHeading"
      },
      {
        "type": "textarea",
        "id": "signup_policy",
        "label": "Policy"
      },
      {
        "type": "header",
        "content": "Contact Menu"
      },
      {
        "type": "text",
        "id": "contact_heading",
        "default": "Get in touch",
        "label": "Heading"
      },
      {
        "type": "link_list",
        "id": "contact_linklist",
        "label": "Menu"
      },
      {
        "type": "header",
        "content": "Follow Menu"
      },
      {
        "type": "text",
        "id": "follow_heading",
        "default": "Follow",
        "label": "Heading"
      },
      {
        "type": "link_list",
        "id": "follow_linklist",
        "label": "Menu"
      },
      {
        "type": "header",
        "content": "Footer Menu"
      },
      {
        "type": "link_list",
        "id": "footer_linklist",
        "label": "Menu",
        "default": "footer"
      },
      {
        "type": "url",
        "id": "facebook",
        "label": "Facebook"
      },
      {
        "type": "url",
        "id": "twitter",
        "label": "Twitter"
      },
      {
        "type": "url",
        "id": "instagram",
        "label": "Instagram"
      },
      {
        "type": "url",
        "id": "spotify",
        "label": "Spotify"
      }
    ]
  }
{% endschema %}
