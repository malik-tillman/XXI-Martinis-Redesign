<style>
  @media (min-width: 768px) {
    .call-to-action .frame {
      min-height: 440px;
      background-image:
        url('{{ 'frame-cta-top-left.svg' | asset_url }}'),
        url('{{ 'frame-cta-top-right.svg' | asset_url }}'),
        url('{{ 'frame-cta-bottom-right.svg' | asset_url }}'),
        url('{{ 'frame-cta-bottom-left.svg' | asset_url }}'),
        url('{{ 'frame-cta-top.svg' | asset_url }}'),
        url('{{ 'frame-cta-right.svg' | asset_url }}'),
        url('{{ 'frame-cta-bottom.svg' | asset_url }}'),
        url('{{ 'frame-cta-left.svg' | asset_url }}');
      background-repeat:
        no-repeat, no-repeat, no-repeat, no-repeat,
        repeat-x, repeat-y, repeat-x, repeat-y;
      background-size: 150px auto;
      background-position:
        top left, top right, bottom right, bottom left,
        top, right, bottom, left;
    }
  }

  .call-to-action br {
    content: '';
  }

  .call-to-action br:after {
    content: ' ';
  }

  @media (min-width: 1024px) {
    .call-to-action br {
      display: block;
    }
  }
</style>
<section class="call-to-action sm:container px-6 mt-24 md:mt-36 xl:mt-44">
  <div class="frame md:pt-36 md:pb-44">
    <div class="mx-auto sm:px-10 md:px-28 lg:px-32 xl:px-40 2xl:px-72 text-center">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | img_url: 'master', scale: 2 }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="mx-auto">
      {%- endif -%}
      <div data-aos="fade-block">
        <p class="sub-title mt-8">{{ section.settings.heading_prefix }}</p>
        <p class="title mt-5">{{ section.settings.heading_main }}</p>
        {%- if section.settings.button_link != blank -%}
          <a href="{{ section.settings.button_link }}" class="btn mt-7">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Call to Action",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading_prefix",
        "label": "Heading Prefix"
      },
      {
        "type": "textarea",
        "id": "heading_main",
        "label": "Heading Main"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Call to Action"
      }  
    ]
  }
{% endschema %}