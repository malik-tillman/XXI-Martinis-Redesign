<section class="hero-collection flex md:min-h-screen pt-44 xl:pt-52">
  <div class="flex flex-wrap items-center w-full min-h-full md:container px-6">
    <div class="mx-auto">
      <div class="message sm:max-w-lg lg:max-w-2xl xl:max-w-3xl mx-auto text-center">
        <div data-aos="fade-block">
          <p class="sub-title mb-6">{{ section.settings.heading_prefix }}</p>
          <h2 class="title mb-1">{{ section.settings.heading_main }}</h2>
          {{ section.settings.content }}
        </div>
      </div>
      <div class="bottles flex flex-wrap justify-center xl:mx-28">
        {% for block in section.blocks %}
          <a href="{{ block.settings.link | escape }}" class="w-1/2 sm:w-1/3 md:w-1/5 mt-14" data-aos="fade-block">
            <img
              src="{{ block.settings.image | img_url: 'large', scale: 2 }}"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy">
            <div class="sub-title">
              <span>{{ block.settings.text }}</span>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "text",
        "id": "heading_prefix",
        "label": "Heading Prefix"
      },
      {
        "type": "textarea",
        "id": "heading_main",
        "label": "Heading Main"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      }
    ],
    "blocks": [
      {
        "name": "Flavor",
        "type": "flavor",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Flavor"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}