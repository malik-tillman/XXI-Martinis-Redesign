{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<section class="product-description flex min-h-screen pt-40 pb-28 bg-gray">
  <div class="flex flex-wrap items-center w-full min-h-full md:container px-6">
    <div class="w-full md:w-1/2">
      <div class="featured-image max-w-sm md:max-w-xl mx-auto md:mx-0 md:ml-auto md:pr-8">
        <img
          src="{{ featured_image | img_url: 'master', scale: 2 }}"
          width="{{ featured_image.width }}"
          height="{{ featured_image.height }}"
          alt="{{ featured_image.alt | escape }}"
          class="object-cover w-full h-full"
          loading="lazy">
      </div>
    </div>
    <div class="w-full md:w-1/2 mt-6 md:mt-0">
      <div class="max-w-xl md:max-w-md mx-auto text-white">
        <div data-aos="fade-block">
          <div class="sub-title text-silver">
            {{ section.settings.product_prefix }}
          </div>
          <h1 class="title mt-6">
            {{ product.title }}
          </h1>
          <div class="rte mt-2">
            {{ product.description }}
          </div>
          {% if section.settings.button_link != blank %}
            <a href="{{ section.settings.button_link | escape }}" class="btn btn--border mt-10">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Description",
    "settings": [
      {
        "type": "text",
        "id": "product_prefix",
        "label": "Product Prefix"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ]
  }
{% endschema %}