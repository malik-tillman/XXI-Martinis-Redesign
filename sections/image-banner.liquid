<section class="image-banner sm:container px-6 mt-24 md:mt-36 xl:mt-44">
  <div class="image-wrap">
    <div class="image aspect-w-16 aspect-h-14 sm:aspect-h-9">
      {% if section.settings.show_video == true %}
        <video
          class="video object-cover w-full h-full"
          autoplay muted playsinline
          {% if section.settings.loop_video == true %}loop{% endif %}
        >
          <source src="{{ section.settings.vimeo_link }}">
        </video>
      {% else %}
        <img
          src="{{ section.settings.image | img_url: 'master', scale: 2 }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="object-cover w-full h-full">
      {% endif %}
    </div>
    <div class="message flex flex-col place-content-center">
      <div data-aos="fade-block">
        <p>{{ section.settings.message }}</p>
        {%- if section.settings.show_logo == true -%}
          <div class="w-12 sm:w-14 md:w-20 mx-auto mt-3 sm:mt-4 md:mt-5">
            {% render 'icon-brand' %}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "textarea",
        "id": "message",
        "label": "Message"
      },
      {
        "type": "checkbox",
        "id": "show_logo",
        "label": "Show Logo"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "checkbox",
        "id": "show_video",
        "label": "Show Video",
        "default": false
      },
      {
        "type": "text",
        "id": "vimeo_link",
        "label": "Vimeo Link"
      },
      {
        "type": "checkbox",
        "id": "loop_video",
        "label": "Loop Video",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Image Banner"
      }  
    ]
  }
{% endschema %}