<section class="carousel pb-10 mt-24 md:mt-36 xl:mt-44">
  {% for block in section.blocks %}
    <div class="slide flex items-center w-full min-h-full mr-3 md:mr-4 xl:mr-6 overflow-hidden bg-gray">
      <div class="sm:container px-6 sm:px-24 md:px-28 lg:px-32 xl:px-36 py-32 text-center">
        <div data-aos="fade-block">
          <div class="sub-title">{{ block.settings.quote_prefix | escape }}</div>
          <blockquote>
            <p class="title mt-6">{{ block.settings.quote_main }}</p>
            {%- if block.settings.quote_author != blank -%}
              <hr class="mt-8">
              <footer class="sub-title mt-8">
                <div>{{ block.settings.quote_author | escape }}</div>
                <a href="{{ block.settings.press_link | escape }}" target="_blank">{{ block.settings.press_name | escape }}</a>
              </footer>
            {%- endif -%}
          </blockquote>
        </div>
      </div>
      <div class="carousel-ticker absolute ticker-top">
        <div class="ticker-wrap flex justify-start overflow-hidden">
          <div class="ticker-list tick-left flex">
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
          </div>
        </div>
      </div>
      <div class="carousel-ticker absolute ticker-bottom">
        <div class="ticker-wrap flex justify-end overflow-hidden">
          <div class="ticker-list tick-right flex">
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
            <div class="ticker-item">{% render 'ticker-symbol' %}</div>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</section>

{% schema %}
  {
    "name": "Press Carousel",
    "blocks": [
      {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "text",
           "id": "quote_prefix",
           "label": "Quote Prefix"
         },
         {
           "type": "textarea",
           "id": "quote_main",
           "label": "Quote Main"
         },
         {
           "type": "text",
           "id": "quote_author",
           "label": "Quote Author"
         },
         {
           "type": "text",
           "id": "press_name",
           "label": "Press Name"
         },
         {
           "type": "url",
           "id": "press_link",
           "label": "Press Label"
         }
       ]
     }  
    ],
    "presets": [
      {
        "name": "Press Carousel"
      }  
    ]
  }
{% endschema %}